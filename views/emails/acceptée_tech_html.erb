<% # coding: utf-8 %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Un demande d'intervention nécessite votre intervention</title>
  </head>
  <body>
    <img src="<%="#{base_url}/images/banner.jpg" %>" alt="Association Se Loger Pour Vivre" >
    <div style="padding:20px;">
        <p>Bonjour <%=to.nom%>,</p>
        <p>La fiche suivante nécessite votre intervention:</p>
    </div>
<div style="margin-left: 10px">
    <table style="border: 1px solid black;">
      <thead>
        <tr>
          <th>Création</th>
          <th>Sujet</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=fiche.debute_le%></td>
          <td>
            <a href="<%="#{base_url}/##{fiche.id}/executer"%>">
              <%=fiche.sujet %>
            </a>
            </td>
        </tr>
      </tbody>
    </table>
    </div>
  </body>
</html>

