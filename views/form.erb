<%
if !@bk.nil?
    name  = @bk[:name]
    url = @bk[:url]
else
    name  = ""
    url = ""
end
%>
<form class="well">
    <label>Name</label>
    <input type="text" class="span3" placeholder="Type something…" name="name" value="<%=name%>">
    <label>Url</label>
    <input type="text" class="span3" placeholder="Type something…" name="url" value="<%=url%>">
    <button type="submit" class="btn">Submit</button>
</form>
