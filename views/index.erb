<div class="row">
  <div class="span5 offset2"><h3>Vos fiches d'intervention</h3></div>
</div>
<div class="span5">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
	<th>Création</th>
	<th>Sujet</th>
	<th>Exécution</th>
	<th>Statut</th>
	<th></th>
      </tr>
    </thead>
    <tbody>
      <% if @fiches.nil? || @fiches.count == 0 %>
	<tr><td colspan="4" class="center">Vous n'avez pas encore fait de demande d'intervention</td></tr>
      <% else %>
	<% @fiches.each do |fiche|%>
	<tr class="ficheRow">
	  <td class="center"><%=fiche.debute_le%></td>
	  <td class="center"><%=fiche.sujet %></td>
	  <td class="center"><%=fiche.finie_le%></td>
	  <td class="center">
	    <span class="label <%=cssStatus(fiche.statut.nom)%>"><%=fiche.statut.nom %></span>
	  </td>
	<td>
	  <a href="/fiche/<%=fiche.id %>" title="Modifier"><i class="icon-pencil"></i></a>
	</td>
	</tr>
	<% end %>
      <% end %>
    </tbody>
  </table>
  <% if current_user.role.nom == 'Agent' %>
    <button class="btn btn-info lien" type="button" data-target="/fiche">Faire une demande d'intervention</button>
  <% end %>
</div>
