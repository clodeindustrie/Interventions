    <div class="row">
	<div class="span3 offset1"><h3>Les addresses</h3></div>
    </div>
    <div class="span8">
      <table class="table table-striped table-condensed">
	<thead>
	  <tr>
	    <th>Addresse</th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	  <% if @adds.nil? || @adds.count == 0 %>
	    <tr><td colspan="2" class="center">Il n'y a pas d'addresse</td></tr>
	  <% else %>
	    <% @adds.each do |add|%>
	    <tr class="ficheRow">
	      <td><%=h add.addresse %></td>
	      <td class="actions">
		<a href="/addresse/<%=add.id %>" title="Modifier"><i class="icon-pencil"></i></a>
	      </td>
	    </tr>
	    <% end %>
	  <% end %>
	</tbody>
      </table>
        <button class="btn btn-info lien" type="button" data-target="/addresse">Ajouter une addresse</button>
    </div>
